# MANIFEST.in
# Specifies additional files to include in the distribution package

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include .env.example

# Include configuration files
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include pytest.ini
include Makefile

# Include documentation directory
recursive-include docs *.md

# Include example data
include data/example_*.json

# Include scripts
recursive-include scripts *.sh
recursive-include scripts *.py

# Include deployment configs
recursive-include deployment *.service *.yml *.yaml

# Include GitHub templates
recursive-include .github *.md *.yml *.yaml

# Exclude test files
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude build artifacts
exclude .coverage
exclude .pytest_cache
exclude htmlcov
