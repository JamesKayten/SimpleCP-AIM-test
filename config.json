{
  "server": {
    "host": "127.0.0.1",
    "port": 8080,
    "cors_origins": [
      "*"
    ]
  },
  "clipboard": {
    "max_history": 50,
    "display_count": 10,
    "display_length": 50,
    "check_interval": 1,
    "auto_save": true
  },
  "logging": {
    "level": "INFO",
    "log_dir": "logs",
    "max_file_size": 10485760,
    "backup_count": 5,
    "enable_console": true
  },
  "keyboard": {
    "enabled": true,
    "toggle_panel": "cmd+alt+v",
    "quick_paste_prefix": "cmd+alt"
  },
  "data_dir": "data"
}